<h1>New Sale</h1>

<%= form_with model: @sale, url: sales_path do |form| %>
  <%= form.hidden_field :stock_id, value: @stock.id %>

  <%= form.label :quantity %>
  <%= form.number_field :quantity %>

  <%= form.label :sold_at %>
  <%= form.date_field :sold_at %>

  <%= form.label :price %>
  <%= form.number_field :price %>

  <%= form.submit %>
<% end %>

<%= link_to 'Back', sales_path %>
