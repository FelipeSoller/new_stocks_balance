<h1>Sales</h1>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Quantity</th>
      <th>Sold At</th>
    </tr>
  </thead>
  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= sale.item.name %></td>
        <td><%= sale.quantity %></td>
        <td><%= sale.sold_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Sale', new_sale_path %>
