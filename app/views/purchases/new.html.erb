<h1>New Purchase</h1>

<%= form_with model: @purchase, url: purchases_path do |form| %>
  <%= form.hidden_field :stock_id, value: @stock.id %>

  <%= form.label :quantity %>
  <%= form.number_field :quantity %>

  <%= form.label :price %>
  <%= form.number_field :price %>

  <%= form.submit %>
<% end %>

<%= link_to 'Back', stocks_path %>
